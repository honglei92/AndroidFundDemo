<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.firsttab.rxjava.RxImageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/show_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />

        <ImageView
            android:id="@+id/show_image1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />

        <ImageView
            android:id="@+id/show_image2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_no_network"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/refresh_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:src="@drawable/color_no_network"/>

        <TextView
            android:id="@+id/refresh_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="网络无连接,点击刷新"
            android:textColor="@android:color/darker_gray"/>

        <Button
            android:id="@+id/setnet_btn"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_common_btn"
            android:gravity="center"
            android:text="  设置网络  "
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"/>
    </LinearLayout>
</RelativeLayout>
